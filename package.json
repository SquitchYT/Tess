    "powershell",
    "electron",
    "electronjs",
    "gui",
    "application"
  ],
  "repository": "github:SquitchYT/Tess",
  "main": "src/main.js",
  "scripts": {
    "test": "electron .",
    "build": "electron-builder --linux dir",
