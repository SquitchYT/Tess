{
  "name": "tess",
  "version": "0.6.2",
  "description": "Tess is a hackable, simple, rapid and beautiful terminal for the new era of technology",
  "license": "Mozilla Public License 2.0",
  "author": {
    "name": "Squitch",
    "email": "contact@squitch.fr",
